;; Set current project location for when launching allegro
(setq acl-project-dir "s:/_Vault_Working/2-applications/ProsEDICreator/src/development/trunk/")

;; A function that will launch acl-smp, but with the
;; acl-project-dir location
(defun acl-project ()
  (interactive)
  (fi:common-lisp
   "*common-lisp*"
   acl-project-dir
   "c:/acl90-smp.64/allegro"
   (quote ("+B" "+cn"))
   "localhost"
   nil))

(defun acl ()
  (interactive)
  (fi:common-lisp
   "*common-lisp*"
   "s:/_Vault_Working"
   "c:/acl90.64/allegro"
   (quote ("+B" "+cn"))
   "localhost"
   nil))

